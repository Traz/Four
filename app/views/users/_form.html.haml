= simple_form_for @user, :html => {:class => 'well form-horizontal'}  do |f|
  = f.error_notification
  
  .form-inputs
    = f.input :username
    = f.input :lastname
    = f.input :identity
    = f.input :email
    = f.input :birthdate, :as => :string, :input_html => {:class => 'datepicker col-span-3'}  
    = f.input :active
  .form-actions
    = f.submit :class => "btn btn-primary" 


:javascript
  $('.datepicker').datepicker({
      format: "yyyy-mm-dd",
      todayHighlight: true,
      todayBtn: 'linked',
      autoclose: true
  }); ;