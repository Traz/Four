

.well.row
  - if @user.avatar?
    .span-1.thumbnail.pull-left
      = image_tag @user.avatar.small.url
  .span-11
    = simple_form_for @user, :html => {:class => 'form-horizontal'}  do |f|
      = f.error_notification
      
      .form-inputs
        = f.input :username
        = f.input :lastname
        = f.input :identity

        = render 'file_upload'

        = f.input :avatar_cache, :as => :hidden
        = f.input :remove_avatar, :as => :boolean
        = f.input :email
        = f.input :birthdate, :as => :string, :input_html => {:class => 'datepicker col-span-3'}  
        = f.input :active
      .form-actions
        = f.submit :class => "btn btn-primary" 







