= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :lastname
    = f.text_field :lastname
  .field
    = f.label :identity
    = f.text_field :identity
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :birthdate
    = f.date_select :birthdate
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save'
